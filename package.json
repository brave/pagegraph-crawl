{
  "name": "pagegraph-crawl",
  "version": "1.0.0",
  "description": "CLI for crawling with PageGraph.",
  "main": "built/crawl.js",
  "scripts": {
    "lint": "standardx src/**/*.ts src/*.ts",
    "lint:fix": "standardx --fix src/**/*.ts src/*.ts",
    "build": "tsc",
    "postinstall": "npm run build",
    "crawl": "node ./built/run.js"
  },
  "type": "module",
  "author": "",
  "license": "MPL-2.0",
  "dependencies": {
    "@supercharge/promise-pool": "^1.2.0",
    "argparse": "^1.0.10",
    "fs-extra": "^9.0.0",
    "node-fs-extra": "^0.8.2",
    "puppeteer-core": "^3.3.0",
    "tmp": "^0.2.1",
    "typescript": "^5.0.4",
    "xvfb": "^0.3.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "standardx": "^7.0.0"
  },
  "eslintConfig": {
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": "error"
    }
  },
  "standardx": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint/eslint-plugin"
    ]
  }
}
